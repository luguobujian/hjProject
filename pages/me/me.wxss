/* pages/me/me.wxss */

page, .container {
  height: 100%;
  background-color: #f2f2f2;
}

.main-view {
  margin: 30rpx 34rpx;
  position: relative;
}

.main-view image {
  width: 100%;
}

.c-logo-view image {
  width: 188rpx;
  height: 76rpx;
  position: absolute;
  top: 32rpx;
  left: 42rpx;
}

.qr-code-view image {
  background-color: skyblue;
  width: 57rpx;
  height: 57rpx;
  position: absolute;
  top: 148rpx;
  left: 48rpx;
}

.arrow-view image {
  width: 22rpx;
  height: 44rpx;
  position: absolute;
  top: 156rpx;
  left: 120rpx;
}

.name-view view {
  color: #fff;
  font-size: 48rpx;
  letter-spacing: 18rpx;
  position: absolute;
  top: 146rpx;
  left: 238rpx;
}

.avatar-view {
  width: 136rpx;
  height: 190rpx;
}

.avatar-view image {
  /* background-color: skyblue; */
  width: 136rpx;
  height: 190rpx;
  position: absolute;
  top: 40rpx;
  left: 506rpx;
}

.avatar-view01 {
  width: 150rpx;
  height: 100rpx;
}

.avatar-view01 image {
  /* background-color: skyblue; */
  width: 150rpx;
  height: 100rpx;
  position: absolute;
  top: 40rpx;
  left: 506rpx;
}

.id-view {
  position: absolute;
  top: 246rpx;
  left: 44rpx;
}

.id-view view {
  color: #f8ab00;
  font-size: 36rpx;
  letter-spacing: 17rpx;
  margin-left: 13rpx;
  text-shadow: #fff092 -1rpx -0.3rpx 0;
}

.id-view view:first-child {
  margin-left: 0;
}

.small-tit {
  color: #fff;
  position: absolute;
  top: 330rpx;
  left: 42rpx;
}

.small-tit view {
  font-size: 20rpx;
  font-weight: bold;
  line-height: 20rpx;
  margin-right: 18rpx;
}

.ver {
  height: 20rpx;
  width: 2rpx;
  background-color: #4b9277;
}

.qrcord {
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
}
.click-view {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 40rpx;
  left: 0;
}
.con-view {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.qrcord-tit {
  width: 562rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #a70000;
}

.qrcord-image-view {
  background-color: #fff;
}

.qrcord-image-view image {
  width: 404rpx;
  height: 404rpx;
  padding: 14rpx;
  margin: 56rpx 0;
  box-shadow: 0px 0px 5px 5px #aaa;
}
