/* pages/headline/headline.wxss */

page, .container {
  min-height: 100%;
  background-color: #f8f8f8;
}

.tab-h {
  height: 88rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 88rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-h view {
  /* margin: 0 36rpx; */
  display: inline-block;
  width: 150rpx;
  font-size: 30rpx;
  text-align: center;
}

.tab-h view.active {
  font-size: 32rpx;
  color: #b90000;
  font-weight: bold;
}

.tab-content {
  margin-top: 88rpx;
}

.slider-view {
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0;
  text-align: center;
  background-color: #f8f8f8;
}

.slider {
  /* height: 370rpx; */
  height: 332rpx;
}

.slider image {
  width: 690rpx;
  height: 332rpx;
  /* margin: 20rpx 0 0 30rpx; */
  border-radius: 14rpx;
}

.item-hot {
  height: 214rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.item-con {
  width: 422rpx;
  padding-left: 34rpx;
}

.item-tit {
  font-size: 30rpx;
  color: #0e0e0e;
  margin-top: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-some-info {
  height: 60rpx;
  color: #8c8c8c;
  font-size: 22rpx;
  line-height: 30rpx;
  margin-top: 18rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-btm {
  margin-top: 16rpx;
}

.item-btm > view {
  color: #a3a3a3;
  font-size: 18rpx;
  line-height: 18rpx;
}

.item-btm >.item-tag {
  color: #b53126;
  padding: 5rpx 8rpx 3rpx;
  border: 1px solid #b53126;
  border-radius: 6rpx;
}

.item-for {
  margin: 6rpx 30rpx 0 26rpx;
}

.item-date {
  margin: 6rpx 30rpx 0 0;
}

.item-time {
  margin-top: 6rpx;
}

.image-view image {
  width: 230rpx;
  height: 166rpx;
  background-color: skyblue;
  border-radius: 10rpx;
  margin: 24rpx 32rpx;
}
